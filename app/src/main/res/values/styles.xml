<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseLinearLayoutVertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="LinearLayoutVerticalStart">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="BaseItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TitleTextView" parent="BaseTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTextView" parent="BaseTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/md_theme_primary</item>
        <item name="iconTint">@color/md_theme_scrim</item>
        <item name="shapeAppearanceOverlay">@style/SquareRoundedButtonShape</item>
    </style>

    <!-- Define o shape para um botÃ£o quadrado com cantos arredondados -->
    <style name="SquareRoundedButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">16dp</item> <!-- Ajuste o valor de acordo com o arredondamento desejado -->
    </style>


</resources>